{
  "name": "@miniben90/x-win",
  "version": "0.3.0",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "napi": {
    "name": "x-win",
    "triples": {
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "aarch64-pc-windows-msvc",
        "i686-pc-windows-msvc",
        "aarch64-apple-darwin",
        "universal-apple-darwin"
      ]
    }
  },
  "author": {
    "name": "BENKHADRA Hocine",
    "email": "contact@benkhadra.com",
    "url": "https://benkhadra.com/"
  },
  "repository": "https://github.com/miniben-90/x-win.git",
  "license": "MIT",
  "keywords": [
    "active",
    "window",
    "windows",
    "active-window"
  ],
  "devDependencies": {
    "@napi-rs/cli": "^2.15.2",
    "@swc-node/register": "^1.6.3",
    "@swc/core": "^1.3.44",
    "@taplo/cli": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "ava": "^5.2.0",
    "benny": "^3.7.1",
    "chalk": "^5.2.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "typescript": "^4.9.5"
  },
  "ava": {
    "timeout": "3m"
  },
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "bench": "node -r @swc-node/register benchmark/bench.ts",
    "build": "napi build --platform --release --pipe \"prettier -w\"",
    "build:debug": "napi build --platform --pipe \"prettier -w\"",
    "format": "run-p format:prettier format:rs format:toml",
    "format:prettier": "prettier . -w",
    "format:toml": "taplo format",
    "format:rs": "cargo fmt",
    "lint": "eslint . -c ./.eslintrc.yml",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "ava",
    "version": "napi version"
  },
  "packageManager": "yarn@3.4.1",
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint -c .eslintrc.yml --fix"
    ],
    "*.@(js|ts|tsx|yml|yaml|md|json)": [
      "prettier --write"
    ],
    "*.toml": [
      "taplo format"
    ]
  },
  "description": "Get position, size, title and a few other properties of the active or open window(s) on Windows, MacOS and Linux."
}
